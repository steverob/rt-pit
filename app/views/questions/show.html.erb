<div class="span10 offset1"><%- model_class = Question -%>
<div class="page-header">
  <h3><%=t '.title', :default => model_class.model_name.human %></h3>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:question) %>:</strong></dt>
  <dd><%= simple_format @question.question %></dd>
  <dt><strong>Answer Choices:</strong></dt>
  <dd><ul style="style:none;">
        <% for answer in @answers %>
          <% if answer.is_correct %>
            <%= raw('<li>'+answer.answer+'&nbsp;&nbsp;<span class="badge badge-success">Correct</span></li>') %>
          <%else%>
            <%= raw('<li>'+answer.answer+'</li>') %>
          <%end%>
        <%end%>
      </ul>
  </dd>
  <dt><strong>Tags:</strong></dt>
  <dd><%= @tags %></dd>
</dl>

<div class="form-actions">
  <%= link_to raw("<i class='icon-chevron-left'></i>&nbsp;Back"),
              questions_path, :class => 'btn btn-primary'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_question_path(@question), :class => 'btn btn-warning' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              question_path(@question),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

</div>
